@page "{id:int}"
@model HotelBooking_WEB.Pages.AdminEditHotelModel
@{
    ViewData["Title"] = "Редактировать отель";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Редактировать отель</h1>

<form method="post">
    <input type="hidden" asp-for="Hotel.Id" />
    <input type="hidden" asp-for="Hotel.CompanyId" />
    <input type="hidden" asp-for="Hotel.ImageUrl" />
    <input type="hidden" asp-for="Hotel.Rating" />

    <div class="form-group">
        <label asp-for="Hotel.Name"></label>
        <input asp-for="Hotel.Name" class="form-control" />
        <span asp-validation-for="Hotel.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hotel.City"></label>
        <input asp-for="Hotel.City" class="form-control" />
        <span asp-validation-for="Hotel.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hotel.Address"></label>
        <input asp-for="Hotel.Address" class="form-control" />
        <span asp-validation-for="Hotel.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hotel.Description"></label>
        <textarea asp-for="Hotel.Description" class="form-control"></textarea>
        <span asp-validation-for="Hotel.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-page="/AdminHotels" asp-route-companyId="@Model.Hotel.CompanyId" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
