@page
@model HotelBooking_WEB.Pages.AddRoomModel
@{
    ViewData["Title"] = "Добавить комнату";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container py-5">
    <h1 class="text-center mb-4" style="color: #1a73e8;">Добавить комнату</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="HotelId" class="form-label">Выберите отель:</label>
            <select class="form-select" asp-for="Room.HotelId" required>
                <option value="">-- Выберите отель --</option>
                @foreach (var hotel in Model.Hotels)
                {
                    <option value="@hotel.Id">@hotel.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="RoomName" class="form-label">Название комнаты:</label>
            <input type="text" class="form-control" id="RoomName" asp-for="Room.RoomName" required />
        </div>

        <div class="mb-3">
            <label for="PricePerNight" class="form-label">Цена за ночь:</label>
            <input type="number" step="0.01" class="form-control" id="PricePerNight" asp-for="Room.PricePerNight" required />
        </div>

        <div class="mb-3">
            <label for="Capacity" class="form-label">Вместимость:</label>
            <input type="number" class="form-control" id="Capacity" asp-for="Room.Capacity" min="1" max="10" required />
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Описание:</label>
            <textarea class="form-control" id="Description" asp-for="Room.Description" required></textarea>
        </div>

        <div class="mb-3">
            <label for="Count" class="form-label">Количество комнат такого типа:</label>
            <input type="number" class="form-control" id="Count" asp-for="Room.Count" min="1" required />
        </div>

        <div class="mb-3">
            <label for="ImageFile" class="form-label">Изображение комнаты:</label>
            <input type="file" class="form-control" id="ImageFile" name="ImageFile" accept="image/*" />
        </div>

        <button type="submit" class="btn btn-primary add-room-btn">Добавить комнату</button>
    </form>
</div>

<style>
    .add-room-btn {
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .add-room-btn:hover {
            background-color: #0056b3;
        }
</style>
