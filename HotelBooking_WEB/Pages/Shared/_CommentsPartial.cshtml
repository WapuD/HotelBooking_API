@using HotelBooking_API.Data.Models
@model List<Comment>


@if (Model != null && Model.Any())
{
    <div class="list-group">
        @foreach (var comment in Model)
        {
            <div class="list-group-item mb-3 shadow-sm rounded">
                <h5>@comment.User.SecondName @comment.User.FirstName <small class="text-muted">@comment.CreatedDate.ToString("dd MMM yyyy")</small></h5>
                <p>@comment.Text</p>
                @if (comment.Rating.HasValue)
                {
                    <p>Рейтинг: @comment.Rating.Value / 5</p>
                }
            </div>
        }
    </div>
}
else
{
    <p>Пока нет отзывов об этом отеле.</p>
}
