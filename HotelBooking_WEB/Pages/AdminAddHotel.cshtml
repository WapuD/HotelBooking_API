        <div class="mb-3">
            <label for="Name" class="form-label">Название отеля:</label>
            <input type="text" class="form-control" id="Name" asp-for="Hotel.Name" required />
        </div>
        <div class="mb-3">
            <label for="Address" class="form-label">Адрес:</label>
            <input type="text" class="form-control" id="Address" asp-for="Hotel.Address" required />
        </div>
        <div class="mb-3">
            <label for="City" class="form-label">Город:</label>
            <input type="text" class="form-control" id="City" asp-for="Hotel.City" required />
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Описание:</label>
            <textarea class="form-control" id="Description" asp-for="Hotel.Description" required></textarea>
        </div>
        <div class="mb-3">
            <label for="ImageFile" class="form-label">Фотография отеля:</label>
            <input type="file" class="form-control" id="ImageFile" name="ImageFile" accept="image/*" required />
        </div>

        <button type="submit" class="btn btn-primary add-hotel-btn">
            Добавить отель
        </button>
    </form>
</div>

<style>
    .add-hotel-btn {
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .add-hotel-btn:hover {
            background-color: #0056b3;
        }
</style>
