@page
@model HotelsModel
@{
    ViewData["Title"] = "Главная";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container py-5">
    <h1 class="text-center mb-4" style="color: #1a73e8;">Лучшие предложения</h1>
    @if (Model.Hotels != null && Model.Hotels.Any())
    {
        <div class="row g-4">
            @foreach (var hotel in Model.Hotels)
            {
                <div class="col-md-4">
                    <div class="hotel-card card h-100 shadow">
                        <div class="card-img-container">
                            <img src="@hotel.ImageUrl" class="card-img-top" alt="@hotel.Name" onerror="this.onerror=null;this.src='DefaultHotel.png';">
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">@hotel.Name</h3>
                            <p class="card-text">@hotel.Description</p>
                            <a asp-page="/Rooms"
                               asp-route-hotelId="@hotel.Id" 
                               class="btn btn-primary mt-3 book-btn">
                                Забронировать
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h2 class="text-center mb-4" style="color: #1a73e8;">Нет доступных отелей.</h2>
    }
</div>
<style>
    .card-img-container {
        height: 250px;
        overflow: hidden;
    }

    .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .hotel-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 15px;
        overflow: hidden;
    }
    
    .hotel-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    }
    
    .price-tag {
        font-size: 1.1rem;
        display: inline-block;
    }
    
    .book-btn {
        transition: background-color 0.3s ease;
        width: 100%;
    }
</style>
