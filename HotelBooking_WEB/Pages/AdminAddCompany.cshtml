@page
@model AddCompanyModel
@{
    ViewData["Title"] = "Добавить компанию";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="text-center mb-4" style="color: #1a73e8;">Добавить компанию</h2>
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="NewCompany.Name" class="form-label">Название:</label>
                            <input asp-for="NewCompany.Name" class="form-control" required />
                            <span asp-validation-for="NewCompany.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="NewCompany.Description" class="form-label">Описание:</label>
                            <input asp-for="NewCompany.Description" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="NewCompany.Email" class="form-label">Корпоративная почта:</label>
                            <input asp-for="NewCompany.Email" class="form-control" />
                            <span asp-validation-for="NewCompany.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="NewCompany.Phone" class="form-label">Телефон:</label>
                            <input asp-for="NewCompany.Phone" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="NewCompany.Website" class="form-label">Ссылка на сайт:</label>
                            <input asp-for="NewCompany.Website" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="LogoFile" class="form-label">Изображение:</label>
                            <input type="file" class="form-control" id="LogoFile" name="LogoFile" accept="image/*" />
                        </div>
                        <div class="mb-3">
                            <label for="NewCompany.TaxId" class="form-label">ИНН:</label>
                            <input asp-for="NewCompany.TaxId" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="NewCompany.LegalAddress" class="form-label">Адрес:</label>
                            <input asp-for="NewCompany.LegalAddress" class="form-control" />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Добавить</button>
                        </div>
                    </form>
                    <div class="text-danger mt-2">
                        @Html.ValidationSummary()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
